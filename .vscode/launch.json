{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[create] CubismContainer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/CubismContainer/cubism_container.py",
            "console": "integratedTerminal",
            "args": [
                "create",
                "--config",
                "${workspaceFolder}/src/config.yaml",
                "--workspace",
                "${workspaceFolder}"
            ]
        },
        {
            "name": "[rebuild] CubismContainer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/CubismContainer/cubism_container.py",
            "console": "integratedTerminal",
            "args": [
                "rebuild",
                "--config",
                "${workspaceFolder}/src/config.yaml"
            ]
        },
        {
            "name": "[template] CubismContainer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/CubismContainer/cubism_container.py",
            "console": "integratedTerminal",
            "args": [
                "template",
                "--output",
                "${workspaceFolder}/config",
            ]
        },
        {
            "name": "update_model",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/adapter/server/update_model.py",
            "console": "integratedTerminal",
            "args": [
                "--workspace",
                "${workspaceFolder}/src/adapter",
                "--horizontal",
                "-15.1",
                "--vertical",
                "-28.2",
                "--scale",
                "0.2",
                "--custom"
            ]
        }
    ]
}

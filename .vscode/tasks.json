{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker:template",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/CubismContainer/cubism_container.py",
                "template",
                "--output",
                "${workspaceFolder}",
            ],
            "detail": "Dockerの中に入って操作できるコンソール"
        },
        {
            "label": "Docker:Exec",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/CubismContainer/cubism_container.py",
                "exec",
                "--config",
                "${workspaceFolder}/src/config.yaml"
            ],
            "detail": "Dockerの中に入って操作できるコンソール"
        },
        {
            "label": "Docker:00_Create",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/CubismContainer/cubism_container.py",
                "create",
                "--workspace",
                "${workspaceFolder}",
                "--config",
                "${workspaceFolder}/src/config.yaml",
            ],
            "detail": "Dockerイメージとコンテナを作成する"
        },
        {
            "label": "Docker:01_Build",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/CubismContainer/cubism_container.py",
                "rebuild",
                "--config",
                "${workspaceFolder}/src/config.yaml"
            ],
            "detail": "モデルデータをビルドして dist フォルダに出力する"
        },
        {
            "label": "Docker:Model:DirUpdate",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/adapter/server/update_model_dirs.py"
            ],
            "detail": "src/Cubism/Resources/ 以下のモデルディレクトリを参照するように lappdefine.ts を更新する"
        }
    ]
}
